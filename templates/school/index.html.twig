{% extends 'base.html.twig' %}

{% block title %}School index{% endblock %}

{% block body %}
    <h1>School index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Location</th>
                <th>Start</th>
                <th>End</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for school in schools %}
            <tr>
                <td>{{ school.id }}</td>
                <td>{{ school.name }}</td>
                <td>{{ school.location }}</td>
                <td>{{ school.start ? school.start|date('Y-m-d') : '' }}</td>
                <td>{{ school.end ? school.end|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('school_show', {'id': school.id}) }}" class="read">show</a>
                    <a href="{{ path('school_edit', {'id': school.id}) }}" class="update">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('school_new') }}" class="create">Create new</a>
{% endblock %}
