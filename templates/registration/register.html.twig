{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register your account</h1>

    {{ form_start(registrationForm) }}
        <div class="d-flex flex-column justify-content-end">
            <div class="mt-5">
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form_label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form_widget'}}) }}
            </div>
            <div class="mt-5">
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form_label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form_widget'}}) }}
            </div>
            <div class="mt-5">
                {{ form_label(registrationForm.agreeTerms, 'Agree terms', {'label_attr': {'class': 'form_label'}}) }}
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form_widget'}}) }}
            </div>
            <button type="submit" class="btn btn-outline-danger rounded-pill mt-5">Register</button>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
